                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active">Products</li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <!-- form  -->
            <!-- The Modal -->
            <div class="modal" id="myModal">
              <div class="modal-dialog modal-xl">
                <div class="modal-content">

                  <!-- Modal Header -->
                  <div class="modal-header">
                    <h4 class="modal-title">Chỉnh sửa thông tin sản phẩm</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                  </div>

                  <!-- Modal body -->
                  <form id="productForm" action="/admin/products/update" method="post">
                    <div class="modal-body">
                      <div class="card card-primary">
                        <div class="card-header">
                          <h3 class="card-title">Sản phẩm</h3>
                        </div>
                        <div class="card-body">
                          <div class="row">
                            <div class="col-3">
                              <label for="">ID</label>
                              <input name="id" type="text" class="form-control">
                            </div>
                            <div class="col-3">
                              <label for="">Mã</label>
                              <input name="code" type="text" class="form-control">
                            </div>
                            <div class="col-3">
                              <label for="">Tên</label>
                              <input name="name" type="text" class="form-control">
                            </div>
                            <div class="col-3">
                              <label for="">Giá</label>
                              <input name="price" type="number" class="form-control">
                            </div>
                          </div>
                          <br>
                          <div class="row">
                            <div class="col-3">
                              <label for="">Loại</label>
                              <select class="form-control select2" name="type" id="">
                                <option value="0">Laptop</option>
                              </select>
                            </div>
                            <div class="col-3">
                              <label for="">Thương hiệu</label>
                              <input name="brand" type="text" class="form-control">
                            </div>
                            <div class="col-3">
                              <label for="">Tồn kho</label>
                              <input name="stock" type="number" class="form-control">
                            </div>
                            <div class="col-3">
                              <label for="">Giảm giá</label>
                              <input name="discount" type="number" class="form-control">
                            </div>
                          </div>
                        </div>
                        <!-- /.card-body -->
                      </div>


                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                      <input class="btn btn-success" type="submit" name="" id="" value="Cập nhật">
                      <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    </div>
                  </form>

                </div>
              </div>
            </div>
            <!-- endForm -->
            <div class="col-12">
              <div class="card">
                <!-- <div class="card-header">
                <h3 class="card-title">Danh sách các đơn hàng</h3>
              </div> -->
                <!-- /.card-header -->
                <div class="card-body">
                  <% if (message.length>0) { %>
                    <div class="alert alert-info alert-dismissible">
                      <button type="button" class="close" data-dismiss="alert">&times;</button>
                      <strong>Info!</strong>
                      <%= message %>
                    </div>
                    <% } %>
                      <table id="example1" class="table table-bordered table-striped">
                        <thead>
                          <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Cost</th>
                            <th>Type</th>
                            <th>Brand</th>
                            <th>Stock</th>
                            <th>Discount</th>
                            <th>Rate</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(var item of data) {%>
                            <tr>
                              <td><a href="/products/<%= item.code %>">
                                  <%= item.code %>
                                </a></td>
                              <td>
                                <%= item.name %>
                              </td>
                              <td>
                                <%= item.price.toLocaleString() %>đ
                              </td>
                              <td>
                                <%= converTypeToString(item.type) %>
                              </td>
                              <td>
                                <%= item.brand %>
                              </td>
                              <td>
                                <%= item.stock %>
                              </td>
                              <td>
                                <%= item.discount %>
                              </td>
                              <td>
                                <%= hanlderRate(item.rate) %>
                              </td>
                              <td>
                                <i id="edit_<%= item._id %>" data-toggle="modal" data-target="#myModal"
                                  class="fa fa-pencil-square-o js_icon_edit" style=" cursor: pointer;"
                                  aria-hidden="true"></i>
                                <a href="/products/<%= item.code %> "><i id="view_<%= item._id %>"
                                    class="fa fa-eye js_icon_view" style="color: blue; cursor: pointer;"
                                    aria-hidden="true"></i></a>
                                <i id="delete_<%= item._id %>" class="fa fa-trash js_icon_delete"
                                  style="color: red;cursor: pointer;" aria-hidden="true"></i>
                              </td>
                            </tr>
                            <% } %>
                        </tbody>
                        <tfoot>
                          <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Cost</th>
                            <th>Type</th>
                            <th>Brand</th>
                            <th>Stock</th>
                            <th>Discount</th>
                            <th>Rate</th>
                            <th>Action</th>
                          </tr>
                        </tfoot>
                      </table>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
