            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <form action="/admin/products/add" method="post" enctype="multipart/form-data">
                                <div class="card card-success">
                                    <div class="card-header">
                                        <h3 class="card-title">Thông tin cơ bản</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label>Loại sản phẩm</label>
                                            <select class="form-control select2" style="width: 100%;">
                                                <option selected="selected">Laptop</option>
                                            </select>
                                        </div>
                                        <div class="row">
                                            <div class="col-3">
                                                <input required name="code" type="text" class="form-control"
                                                    placeholder="Mã sản phẩm">
                                            </div>
                                            <div class="col-3">
                                                <input required name="name" type="text" class="form-control"
                                                    placeholder="Tên sản phẩm">
                                            </div>
                                            <div class="col-3">
                                                <input required name="price" type="number" class="form-control"
                                                    placeholder="Giá">
                                            </div>
                                            <div class="col-3">
                                                <input required name="brand" type="text" class="form-control"
                                                    placeholder="Thương hiệu">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <div class="col-3">
                                                <input required name="stock" type="number" class="form-control"
                                                    placeholder="Tồn kho">
                                            </div>
                                            <div class="col-3">
                                                <input required name="discount" type="number" class="form-control"
                                                    placeholder="Phần trăm giảm giá">
                                            </div>
                                            <div class="col-3">
                                                <input required name="warranty" type="number" class="form-control"
                                                    placeholder="Thời gian bảo hành (Tháng)">
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-file">
                                                        <input required name="avt" type="file" class="custom-file-input"
                                                            id="customFile">
                                                        <label class="custom-file-label" for="customFile">Choose
                                                            file</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- /.card-body -->
                                </div>
                                <div class="card card-success">
                                    <div class="card-header">
                                        <h3 class="card-title">Chi tiết cho Laptop</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-2">
                                                <input required name="chipBrand" type="text" class="form-control"
                                                    placeholder="Nhãn hiệu cpu">
                                            </div>
                                            <div class="col-2">
                                                <input required name="processorCount" type="number" class="form-control"
                                                    placeholder="Số lượng core">
                                            </div>
                                            <div class="form-group col-2">
                                                <select name="series" class="form-control select2" style="width: 100%;">
                                                    <option value="0" selected="selected">Core i3</option>
                                                    <option value="1">Core i5</option>
                                                    <option value="2">Core i7</option>
                                                    <option value="3">Core i9</option>
                                                    <option value="4">Ryzen 3</option>
                                                    <option value="5">Ryzen 5</option>
                                                    <option value="6">Ryzen 7</option>
                                                    <option value="7">Pentium</option>
                                                    <option value="8">Celeron</option>
                                                    <option value="9">M1</option>
                                                </select>
                                            </div>
                                            <div class="col-2">
                                                <input required name="detail" type="text" class="form-control" placeholder="Chi tiết cpu">
                                            </div>
                                            <div class="col-2">
                                                <input required name="displaySize" type="text" class="form-control" placeholder="Kích thước màn hình">
                                            </div>
                                            <div class="col-2">
                                                <input required name="display" type="text" class="form-control" placeholder="Card màn hình">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-2">
                                                <input required name="operating" type="text" class="form-control" placeholder="Hệ điều hành">
                                            </div>
                                            <div class="col-2">
                                                <input required name="disk" type="text" class="form-control" placeholder="Ổ cứng">
                                            </div>
                                            <div class="col-2">
                                                <input required name="ram" type="text" class="form-control" placeholder="RAM">
                                            </div>
                                            <div class="col-2">
                                                <input required name="pin" type="text" class="form-control" placeholder="Dung lượng pin">
                                            </div>
                                            <div class="col-2">
                                                <input required name="weight" min="0" step="0.01" type="number" class="form-control" placeholder="Khối lượng">
                                            </div>
                                            <div class="col-2">
                                                <input required class="btn btn-block btn-primary" type="submit" value="Thêm">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </form>
