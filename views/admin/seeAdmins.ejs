                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Birth Day</th>
                            <th>Address</th>
                            <th>Gender</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(account of accounts) {%>
                            <tr>
                              <td>
                                <%= account.user._id %>
                              </td>
                              <td>
                                <%= account.email %>
                              </td>
                              <td>
                                <%= account.user.fullName %>
                              </td>
                              <td>
                                <%= account.user.phone %>
                              </td>
                              <td>
