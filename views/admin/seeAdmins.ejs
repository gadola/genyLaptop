        <div class="container-fluid">
          <% if (errorMessage.length>0) { %>
            <div class="alert alert-info alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong>Info!</strong>
              <%= errorMessage %>
            </div>
            <% } %>
              <div class="row">
                <div class="col-3">
                  <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Tạo mới tài khoản</button>
                </div>
                <!-- form thêm admin mới  -->
                <!-- The Modal -->
                <div class="modal" id="myModal">
                  <div class="modal-dialog modal-xl">
                    <div class="modal-content">

                      <!-- Modal Header -->
                      <div class="modal-header">
                        <h4 class="modal-title">Thêm nhân viên mới</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                      </div>

                      <!-- Modal body -->
                      <div class="modal-body">
                        <form id="" action="/account/admin/signup" method="post">
                          <div class="card card-primary">
                            <div class="card-header">
                              <h3 class="card-title">New Admin</h3>
                            </div>
                            <div class="card-body">
                              <div class="row">
                                <div class="col-3">
                                  <label for="">Email</label>
                                  <input required name="email" type="email" class="form-control">
                                </div>
                                <div class="col-3">
                                  <label for="">Password</label>
                                  <input required name="password" type="password" class="form-control">
                                </div>
                                <div class="col-3">
                                  <label for="">Retype Password</label>
                                  <input required name="repassword" type="password" class="form-control">
                                </div>
                                <div class="col-3">
                                  <label for="">Name</label>
                                  <input required name="fullName" type="text" class="form-control">
                                </div>


                              </div>
                              <br>
                              <div class="row">
                                <div class="col-3">
                                  <label for="">Phone number</label>
                                  <input required name="phone" type="text" class="form-control">
                                </div>
                                <div class="col-3">
                                  <label for="">Birthday</label>
                                  <input name="birthday" type="date" class="form-control">
                                </div>
                                <div class="col-3">
                                  <label for="">Address</label>
                                  <input name="address" type="text" class="form-control">
                                </div>
                                <div class="col-3">
                                  <label for="">Giới tính</label>
                                  <select class="form-control select2" name="gender" id="">
                                    <option value="true" selected>Nam</option>
                                    <option value="false">Nữ</option>
                                  </select>
                                </div>

                              </div>
                            </div>
                            <!-- /.card-body -->
                          </div>
                          
                          <input class="btn btn-success" type="submit" name="" id="" value="Thêm">
                          <!-- <input class="btn btn-secondary" type="reset" name="" id="" value="Huỷ bỏ"> -->

                        </form>
                      </div>

                      <!-- Modal footer -->
                      <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                      </div>

                    </div>
                  </div>
                </div>
