<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
    <!-- nav bar -->
    <div class="container">
        <nav class="navbar navbar-expand-sm bg-light navbar-light justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Admin
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Đăng xuất</a>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/">Xem trang web</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="row">
        <!-- nav menu -->
        <div class="col-sm-1">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Dashboard</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="/admin/products">Products</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/admin/products">See Products</a>
                        <a class="dropdown-item" href="/admin/products/add">Add Product</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/orders">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/users">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
        </div>

        <div class="col-sm-10">
            <table class="table-striped table">
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Tên</th>
                    <th>Số điện thoại</th>
                    <th>Ngày sinh</th>
                    <th style="width: 500px;">Địa chỉ</th>
                    <th>Giới tính</th>
                    <th>Hành động</th>
                </tr>
                <% for(user of users) {%>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                        <td><%= user.fullName %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.birthday %></td>
                        <td><%= user.address %></td>
                        <td><% if(user.gender) {%>Nam<% }else {%>Nữ<% } %></td>
                        <td>Xoá</td>
                    </tr>
                    <% } %>  
            </table>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="page-item"><a class="page-link" href="">Previous</a></li>
          <li class="page-item"><a class="page-link" href="/admin/users">1</a></li>
          <li class="page-item"><a class="page-link" href="/admin/users?page=2">2</a></li>
          <li class="page-item"><a class="page-link" href="/admin/users?page=3">3</a></li>
          <li class="page-item"><a class="page-link" href="">Next</a></li>
        </ul>
    </nav>
</body>

</html>


