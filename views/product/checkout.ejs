<%- include("../layout/header.ejs") %>
    <link rel="stylesheet" href="/stylesheets/checkoutPage.css">
    <section class="header_text sub">
        <h4><span>Thanh Toán</span></h4>
    </section>
    <section class="main-content">
        <div class="row">
            <div class="span12">
                <div class="accordion" id="accordion2">
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2"
                                href="#collapseTwo">Thông tin giao hàng</a>
                        </div>
                        <div id="collapseTwo" class="accordion-body in collapse">
                            <div class="accordion-inner">
                                <div class="row-fluid">
                                    <div class="span6">
                                        <h4>Thông tin người nhận</h4>
                                        <div class="control-group">
                                            <label class="control-label">Tên</label>
                                            <div class="controls">
                                                <input required type="text" value="<%= user.fullName %>"
                                                    class="input-xlarge">
                                            </div>
                                        </div>

                                        <div class="control-group">
                                            <label class="control-label">Địa chỉ Email</label>
                                            <div class="controls">
                                                <input readonly type="text" value="<%= user.email %>"
                                                    class="input-xlarge">
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label">Điện thoại</label>
                                            <div class="controls">
                                                <input required type="text" value="<%= user.phone %>"
                                                    class="input-xlarge">
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label">Địa chỉ</label>
                                            <div class="controls">
                                                <input required type="text" value="<%= user.address %>"
                                                    class="input-xlarge">
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label">Ghi chú (tuỳ chọn)</label>
                                            <div class="controls">
                                                <!-- <input required type="text" name="note" class="input-xlarge"> -->
                                                <textarea style=" width: 268px;" name="note" id="" rows="3"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span6">
                                        <h4>Thông tin vật chuyển</h4><br>
                                        <div class="control-group">
                                            <div class="controls">
                                                <div>
                                                    <div class="phuongthucthanhtoan-items">
                                                        <input checked type="radio" name="shipMethod" value="0">
                                                        <label style="font-size:15px" for=""><b>Giao hàng tiêu
                                                            chuẩn</b></label>
                                                    </div>
                                                    <p>Giao hàng sau 3 - 5 ngày làm việc</p>
                                                </div>
                                                <br>
                                                <div>
                                                    <div class="phuongthucthanhtoan-items">
                                                        <input type="radio" name="shipMethod" value="1">
                                                        <label style="font-size:15px" for=""><b>Giao hàng tiết kiệm</b></label>
                                                    </div>
                                                    <p>Giao hàng sau 5 - 7 ngày làm việc</p>
                                                </div>
                                                <br>
                                                <div>
                                                    <div class="phuongthucthanhtoan-items">
                                                        <input type="radio" name="shipMethod" value="2">
                                                        <label style="font-size:15px" for=""><b> Giao hàng nhanh</b></label>
                                                    </div>
                                                    <p>Giao hàng sau 1 - 3 ngày làm việc</p>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2"
                                href="#collapseThree">Xác nhận đơn hàng</a>
                        </div>
                        <div id="collapseThree" class="accordion-body collapse">
                            <div class="accordion-inner">
                                <div class="row-fluid">
                                    <table id="table_cart" class="table table-hover">
                                        <tr>
                                            <th>Mặt hàng</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Đơn giá</th>
                                            <th>Số lượng</th>
                                            <th>Tổng</th>
                                        </tr>
                                    </table>
                                    <table id="total_table_cart" class="table table-hover">
                                        <tr>
                                            <th>Tạm tính</th>
                                            <th>Chi phí vận chuyển</th>
                                            <th>Tổng cộng</th>
                                        </tr>
                                    </table>
                                </div>
                                <div class="row-fluid">
                                    <div id="menu-filter">
                                        <h4>Phương thức thanh toán</h4>
                                        <div class="phuongthucthanhtoan">
                                            <div>
                                                <div class="phuongthucthanhtoan-items">
                                                    <input id="paymentCOD" checked value="0" type="radio"
                                                        name="paymentMethod" class="input-lg">
                                                    <label style="font-size:15px" for="">
                                                        <b>Thanh toán khi nhận hàng (COD)</b>
                                                    </label>
                                                </div>
                                                <p style="font-size:15px">Thanh toán bằng tiền mặt khi nhận hàng tại nhà
                                                    hoặc showroom.</p>
                                            </div>

                                            <div>
                                                <div class="phuongthucthanhtoan-items">
                                                    <input id="paymentOnline" value="1" type="radio"
                                                        name="paymentMethod" class="input-lg">
                                                    <label style="font-size:15px" for="">
                                                        <b> Thanh toán Online qua ví điện tử Momo</b>
                                                    </label>
                                                </div>
                                                <p style="font-size:15px">Vui lòng quét mã QR bên dưới để thanh toán</p>
                                                <canvas style="display: none;" id="qrcodeMomo"></canvas>
                                                <div style="display: none;" id="thongtinchutaikhoan"></div>
                                                <button style="display: none;" id="btnVerifyPayment"
                                                    class="btn btn-primary">
                                                    <!-- <a style="color: white;"
                                                        class="accordion-toggle" data-toggle="collapse"
                                                        data-parent="#accordion2" href="#collapseThree">Thanh toán thành
                                                        công!
                                                    </a> -->
                                                    Thanh toán thành công!
                                                </button>
                                            </div>

                                        </div>
                                    </div>
                                    <button style="padding: 10px;font-size: large;" id="btn_checkout"
                                        class="btn btn-lg btn-primary pull-right">Đặt hàng ngay</button>
                                    <a href="/products/cart" class="pull-center">Quay lại giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/javascripts/qrcode.min.js"></script>
    <script src="/javascripts/checkout.js"></script>
    <%- include("../layout/footer.ejs") %>