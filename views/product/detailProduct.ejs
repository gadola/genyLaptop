<%- include("../layout/header.ejs") %>
    <section class="header_text sub">
        <!-- <img class="pageBanner" src="/themes/images/carousel/slider_2.jpg" alt="New products"> -->
        <h4><span>Chi tiết sản phẩm <%= product.code %> </span></h4>
    </section>
    <section class="main-content">
        <div class="row">
            <div class="span12">
                <div class="row">
                    <!-- tên -->
                    <div class="span5">
                        <a href="<%= product.avt %>" class="thumbnail" data-fancybox-group="group1"
                            title="Description 1"><img alt="" src="<%= product.avt %>"></a>
                        <ul class="thumbnails small">
                            <li class="span1">
                                <a href="/themes/images/cloth/laptop2.jpg" class="thumbnail"
                                    data-fancybox-group="group1" title="Description 2"><img
                                        src="/themes/images/cloth/laptop2.jpg" alt=""></a>
                            </li>
                            <li class="span1">
                                <a href="/themes/images/cloth/laptop4.png" class="thumbnail"
                                    data-fancybox-group="group1" title="Description 3"><img
                                        src="/themes/images/cloth/laptop4.png" alt=""></a>
                            </li>
                            <li class="span1">
                                <a href="/themes/images/cloth/laptop3.png" class="thumbnail"
                                    data-fancybox-group="group1" title="Description 4"><img
                                        src="/themes/images/cloth/laptop3.png" alt=""></a>
                            </li>
                            <li class="span1">
                                <a href="/themes/images/cloth/laptop1.png" class="thumbnail"
                                    data-fancybox-group="group1" title="Description 5"><img
                                        src="/themes/images/cloth/laptop1.png" alt=""></a>
                            </li>
                        </ul>
                    </div>
                    <!-- thông tin chi tiếT -->
                    <div class="span6">
                        <h3>
                            <%= product.name %>
                        </h3>
                        <address>

                            <i style="color: yellowgreen;" class="fa fa-check-circle" aria-hidden="true"></i>
                            <strong>Thương hiệu:</strong> <span>
                                <%= product.brand %> |
                                    <strong>
                                        <%= hanlderRate(product.rate) %> <i
                                                style="color: rgb(229, 233, 0);font-size: 15px;" class="fa fa-star"
                                                aria-hidden="true"></i>
                                    </strong>
                            </span><br>

                            <i style="color: yellowgreen;" class="fa fa-check-circle" aria-hidden="true"></i>
                            <strong>CPU:</strong> <span>
                                <%= productDetail.cpu.chipBrand %>
                                    <%= convertSerisToString(productDetail.cpu.series) %>
                                        <%= productDetail.cpu.detail %>
                            </span><br>

                            <i style="color: yellowgreen;" class="fa fa-check-circle" aria-hidden="true"></i>
                            <strong>Card màn hình:</strong> <span>
                                <%= productDetail.display %>
                            </span><br>

                            <i style="color: yellowgreen;" class="fa fa-check-circle" aria-hidden="true"></i>
                            <strong>Ổ cứng:</strong> <span>
                                <%= productDetail.disk %>
                            </span><br>

                            <i style="color: yellowgreen;" class="fa fa-check-circle" aria-hidden="true"></i>
                            <strong>RAM:</strong> <span>
                                <%= productDetail.ram %>
                            </span><br>

                            <i style="color: yellowgreen;" class="fa fa-check-circle" aria-hidden="true"></i>
                            <strong>Kích thước màn hình:</strong> <span>
                                <%= productDetail.displaySize %>
                            </span><br>

                            <i style="color: yellowgreen;" class="fa fa-check-circle" aria-hidden="true"></i>
                            <strong>Hệ điều hành:</strong> <span>
                                <%= productDetail.operating %>
                            </span><br>

                            <i style="color: yellowgreen;" class="fa fa-check-circle" aria-hidden="true"></i>
                            <strong>Bảo hành:</strong> <span>
                                <%= productDetail.warranty %> tháng
                            </span><br>
                            
                        </address>
                        <h2><%= product.price.toLocaleString() %>đ</h2>
                        <% if(product.discount > 0){ %> 
                        <h5>
                            <strike><%= parseInt(product.price/((100-product.discount)/100)).toLocaleString() %>đ</strike>
                            <span style="color: green;"><%= product.discount %>% </span>
                        </h5>
                        <% } %> 
                    </div>
                    <div class="span6">
                        <form id="form_add_to_cart" class="form-inline">
                            <% if(product.stock > 0){ %> 
                            <p>&nbsp;</p>
                            <input type="hidden" name="_id" value="<%= product._id %>">
                            <input type="hidden" name="code" value="<%= product.code %>">
                            <input type="hidden" name="name" value="<%= product.name %>">
                            <input type="hidden" name="avt" value="<%= product.avt %>">
                            <input type="hidden" name="price" value="<%= product.price %>">
                            <label>Số lượng:</label>
                            <input type="number" name="number" class="span1" value="1" min="1" max="<%= product.stock %>">
                            <button class="btn btn-success" type="submit">Thêm vào giỏ</button>
                        <% }else{ %> 
                            <input type="button" value="Hết hàng" class="btn btn-success" disabled="disabled">
                        <% } %> 
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="span1"></div>
                    <div class="span10">
                        <ul class="nav nav-tabs" id="myTab">
                            <li class=""><a href="#home">Miêu tả</a></li>
                            <li class="active"><a href="#profile">Thông tin sản phẩm</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane " id="home">Laptop ASUS VivoBook S410UA là sự kết hợp hoàn hảo
                                giữa vẻ đẹp và hiệu năng. Với thiết kế viền máy NanoEdge mỏng, cùng vỏ ngoài hoàn thiện
                                với chất liệu kim loại, máy lý tưởng để đồng hành cùng bạn trên khắp nẻo đường. ASUS
                                VivoBook S410UA được trang bị một cấu hình mạnh mẽ đáp ứng được mọi tác vụ đa dạng và
                                phức tạp, hoàn toàn thích hợp cho nhu cầu làm việc lẫn giải trí của người dùng. </div>
                            <div class="tab-pane active" id="profile">
                                <table class="table table-striped shop_attributes">
                                    <tbody>
                                        <tr class="">
                                            <th>Thương hiệu</th>
                                            <td><%= product.brand %> </td>
                                        </tr>
                                        <tr class="">
                                            <th>CPU</th>
                                            <td>
                                                <%= productDetail.cpu.chipBrand %>
                                                <%= productDetail.cpu.processorCount%> Cores
                                                <%= convertSerisToString(productDetail.cpu.series)%> 
                                                <%= productDetail.cpu.detail%> 
                                            </td>
                                        </tr>
                                        <tr class="">
                                            <th>Kích thướt màn hình</th>
                                            <td><%= productDetail.displaySize %> </td>
                                        </tr>
                                        <tr class="">
                                            <th>Card màn hình</th>
                                            <td><%= productDetail.display %> </td>
                                        </tr>
                                        <tr class="">
                                            <th>Hệ điều hành</th>
                                            <td><%= productDetail.operating %> </td>
                                        </tr>
                                        <tr class="">
                                            <th>Ổ cứng</th>
                                            <td><%= productDetail.disk %> </td>
                                        </tr>
                                        <tr class="">
                                            <th>RAM</th>
                                            <td><%= productDetail.ram %> </td>
                                        </tr>
                                        <tr class="">
                                            <th>Pin</th>
                                            <td><%= productDetail.pin %> </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="span1"></div>

                 

                    <div class="span11">
                        <br>
                        <h4 class="title">
                            <span class="pull-left"><span class="text"><strong>Sản phẩm</strong> cùng nhà sản
                                    xuất</span></span>
                            <span class="pull-right">
                                <a class="left button" href="#myCarousel-2" data-slide="prev"></a><a
                                    class="right button" href="#myCarousel-2" data-slide="next"></a>
                            </span>
                        </h4>
                        <div id="myCarousel-2" class="carousel slide">
                            <div class="carousel-inner">
                                <div class="active item">
                                    <ul class="thumbnails listing-products">
                                        <% try { %> 
                                            <% for(let i = 0; i<3; i++){ %> 
                                                <li class="span3">
                                                    <div class="product-box">
                                                        <span class="sale_tag"></span>
                                                        <a href="/products/<%= relatedProducts[i].code %>"><img alt=""
                                                                src="<%= relatedProducts[i].avt %>"></a><br />
                                                        <a href="/products/<%= relatedProducts[i].code %>" class="title"><%= relatedProducts[i].name %></a><br />
                                                        <p class="price"><%= relatedProducts[i].price.toLocaleString() %>đ</p>
                                                    </div>
                                                </li>
                                            <% } %> 
                                        <% } catch (error) { %> 
                                            
                                        <% } %> 
                                        
                                    </ul>
                                </div>
                                <!-- <div class="item">
                                    <ul class="thumbnails listing-products">
                                        <% try { %> 
                                            <% for(let i = 3; i<6; i++){ %> 
                                                <li class="span3">
                                                    <div class="product-box">
                                                        <span class="sale_tag"></span>
                                                        <a href="/products/<%= relatedProducts[i].code %>"><img alt=""
                                                                src="<%= relatedProducts[i].avt %>"></a><br />
                                                        <a href="/products/<%= relatedProducts[i].code %>" class="title"><%= relatedProducts[i].name %></a><br />
                                                        <p class="price"><%= relatedProducts[i].price.toLocaleString() %>đ</p>
                                                    </div>
                                                </li>
                                            <% } %> 
                                        <% } catch (error) { %> 
                                            <p>hết r</p>
                                        <% } %> 
                                    </ul>
                                </div> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/themes/js/common.js"></script>
    <script>
        $(function () {
            // $('#myTab a:first').tab('show');
            $('#myTab a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            })
        })
        $(document).ready(function () {
            $('.thumbnail').fancybox({
                openEffect: 'none',
                closeEffect: 'none'
            });

            $('#myCarousel-2').carousel({
                interval: 2500
            });
        });
    </script>
<script src="/javascripts/addtocart.js"></script>

    <%- include("../layout/footer.ejs") %>