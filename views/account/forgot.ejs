<%- include('../layout/header.ejs') %>


        <!-- content đăng nhập và đăng ký -->
        <h3 style="margin-left: 44%; color: blue;"><span>Thay đổi mật khẩu</span></h3>
        <div class="">
            <form class="" action="/account/forgot-pw" method="POST">
                <div class="message">
                    <% if (errorMessage) { %>
                        <div class="">
                            <%= errorMessage %>
                        </div>
                        <% } %>
                </div>
                <label for="email">Email</label>
                <input required type="text" name="email" id="email" placeholder="Email của bạn">
                <label for="password">Mật khẩu</label>
                <input required type="password" name="password" id="password" placeholder="Mật khẩu của bạn">
                <label for="email">Mã xác nhận</label>
                <input required type="text" name="verifyCode" id="verifyCode" placeholder="Mã xác nhận">
                <input type="button" class="btn btn-success" value="Gửi mã" id="btnSendVerifyCode">
                <br>
                <input type="submit" class="btn btn-primary" value="Thay đổi mật khẩu">
            </form>
            <p>Bạn đã có tài khoản? <a href="/account/login">Đăng nhập</a></p>
        </div>


        <script src="/javascripts/account.js.js"></script>

        <%- include('../layout/footer.ejs') %>
